apiVersion: apps/v1
kind: Deployment
metadata:
  name: atlas-dashboard
  labels:
    app: atlas-dashboard
spec:
  replicas: 1
  selector:
    matchLabels:
      app: atlas-dashboard
  template:
    metadata:
      labels:
        app: atlas-dashboard
    spec:
      containers:
      - name: dashboard
        image: ${ATLAS_REGISTRY}/atlas-dashboard:${ATLAS_IMAGE_TAG}
        imagePullPolicy: Never
        ports:
        - containerPort: ${ATLAS_DASHBOARD_PORT}
        env:
        - name: REDIS_HOST
          value: "redis"
        - name: REDIS_PORT
          value: "${ATLAS_REDIS_PORT}"
        - name: LOG_LEVEL
          value: "${ATLAS_LOG_LEVEL}"
        resources:
          requests:
            memory: "128Mi"
            cpu: "100m"
          limits:
            memory: "512Mi"
            cpu: "500m"
        readinessProbe:
          httpGet:
            path: /
            port: ${ATLAS_DASHBOARD_PORT}
          initialDelaySeconds: 5
          periodSeconds: 10
        livenessProbe:
          httpGet:
            path: /
            port: ${ATLAS_DASHBOARD_PORT}
          initialDelaySeconds: 10
          periodSeconds: 30
---
apiVersion: v1
kind: Service
metadata:
  name: atlas-dashboard
spec:
  selector:
    app: atlas-dashboard
  ports:
  - port: ${ATLAS_DASHBOARD_PORT}
    targetPort: ${ATLAS_DASHBOARD_PORT}
    nodePort: ${ATLAS_DASHBOARD_NODEPORT}
  type: NodePort
