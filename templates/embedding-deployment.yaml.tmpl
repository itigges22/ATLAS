apiVersion: apps/v1
kind: Deployment
metadata:
  name: embedding-service
  labels:
    app: embedding-service
spec:
  replicas: 1
  selector:
    matchLabels:
      app: embedding-service
  template:
    metadata:
      labels:
        app: embedding-service
    spec:
      containers:
      - name: embedding
        image: ${ATLAS_REGISTRY}/embedding-service:${ATLAS_IMAGE_TAG}
        imagePullPolicy: Never
        ports:
        - containerPort: ${ATLAS_EMBEDDING_PORT}
        resources:
          requests:
            memory: "1Gi"
            cpu: "1000m"
          limits:
            memory: "2Gi"
            cpu: "2000m"
        readinessProbe:
          httpGet:
            path: /health
            port: ${ATLAS_EMBEDDING_PORT}
          initialDelaySeconds: 10
          periodSeconds: 10
        livenessProbe:
          httpGet:
            path: /health
            port: ${ATLAS_EMBEDDING_PORT}
          initialDelaySeconds: 20
          periodSeconds: 30
---
apiVersion: v1
kind: Service
metadata:
  name: embedding-service
spec:
  type: NodePort
  selector:
    app: embedding-service
  ports:
  - port: ${ATLAS_EMBEDDING_PORT}
    targetPort: ${ATLAS_EMBEDDING_PORT}
    nodePort: ${ATLAS_EMBEDDING_NODEPORT}
