apiVersion: apps/v1
kind: Deployment
metadata:
  name: llm-proxy
  labels:
    app: llm-proxy
spec:
  replicas: 1
  selector:
    matchLabels:
      app: llm-proxy
  template:
    metadata:
      labels:
        app: llm-proxy
    spec:
      containers:
      - name: llm-proxy
        image: ${ATLAS_REGISTRY}/llm-proxy:${ATLAS_IMAGE_TAG}
        imagePullPolicy: Never
        ports:
        - containerPort: ${ATLAS_LLM_PROXY_PORT}
        env:
        - name: LLAMA_URL
          value: "http://llama-service:${ATLAS_LLAMA_PORT}"
        - name: API_PORTAL_URL
          value: "http://api-portal:${ATLAS_API_PORTAL_PORT}"
        - name: REDIS_HOST
          value: "redis"
        - name: REDIS_PORT
          value: "${ATLAS_REDIS_PORT}"
        - name: DEFAULT_RATE_LIMIT
          value: "${ATLAS_DEFAULT_RATE_LIMIT}"
        - name: LOG_LEVEL
          value: "${ATLAS_LOG_LEVEL}"
        - name: LOG_REQUESTS
          value: "${ATLAS_LOG_REQUESTS}"
        resources:
          limits:
            memory: ${ATLAS_SERVICE_MEMORY_LIMIT}
            cpu: ${ATLAS_SERVICE_CPU_LIMIT}
          requests:
            memory: ${ATLAS_SERVICE_MEMORY_REQUEST}
            cpu: ${ATLAS_SERVICE_CPU_REQUEST}
        readinessProbe:
          httpGet:
            path: /health
            port: ${ATLAS_LLM_PROXY_PORT}
          initialDelaySeconds: 5
          periodSeconds: 10
        livenessProbe:
          httpGet:
            path: /health
            port: ${ATLAS_LLM_PROXY_PORT}
          initialDelaySeconds: 10
          periodSeconds: 30
---
apiVersion: v1
kind: Service
metadata:
  name: llm-proxy
spec:
  selector:
    app: llm-proxy
  ports:
  - port: ${ATLAS_LLM_PROXY_PORT}
    targetPort: ${ATLAS_LLM_PROXY_PORT}
    nodePort: ${ATLAS_LLM_PROXY_NODEPORT}
  type: NodePort
